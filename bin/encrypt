#!/bin/bash

set -e

SCRIPT_NAME=$(basename "$0")
if [[ "$SCRIPT_NAME" == "decrypt" ]]; then
  OPERATION="decrypt"
elif [[ "$SCRIPT_NAME" == "crypt-status" ]]; then
  OPERATION="status"
else
  OPERATION="encrypt"
fi

RECIPIENT=age1l4fu9sazx2umpxw6t2hfdyq4ckun728epmz22y38tvlycu7t6sqqygexfu
IDENTITY="$HOME/.config/age/key.txt"

BOLD=$(tput bold)
GREEN=$(tput setaf 2)
RED=$(tput setaf 1)
RESET=$(tput sgr0)

ITEMS[0]="aspects/dotfiles/files/.config/Raycast/Script Commands/github-commits.sh"
ITEMS[1]="aspects/dotfiles/files/.config/Raycast/Script Commands/github-pulls.sh"
ITEMS[2]="aspects/dotfiles/files/.config/Raycast/Script Commands/github-repo.sh"
ITEMS[3]=aspects/dotfiles/files/.claude/host/comp-ktw7q4c5jh.md
ITEMS[4]=aspects/dotfiles/files/.config/git/handles.jsonc
ITEMS[5]=aspects/dotfiles/files/.config/git/host/comp-ktw7q4c5jh
ITEMS[6]=aspects/dotfiles/files/.config/git/host/latina
ITEMS[7]=aspects/dotfiles/files/.docker/host/comp-ktw7q4c5jh.json
ITEMS[8]=aspects/dotfiles/files/.irssi/config
ITEMS[9]=aspects/dotfiles/files/.npmrc
ITEMS[10]=aspects/dotfiles/files/.pypirc
ITEMS[11]=aspects/dotfiles/files/.zsh/exports.private
ITEMS[12]=aspects/dotfiles/files/.zsh/hash.private
ITEMS[13]=aspects/dotfiles/files/.zsh/host/comp-ktw7q4c5jh
ITEMS[14]=aspects/fonts/files/MonoLisa-Black.ttf
ITEMS[15]=aspects/fonts/files/MonoLisa-BlackItalic.ttf
ITEMS[16]=aspects/fonts/files/MonoLisa-Bold.ttf
ITEMS[17]=aspects/fonts/files/MonoLisa-BoldItalic.ttf
ITEMS[18]=aspects/fonts/files/MonoLisa-ExtraBold.ttf
ITEMS[19]=aspects/fonts/files/MonoLisa-ExtraBoldItalic.ttf
ITEMS[20]=aspects/fonts/files/MonoLisa-ExtraLight.ttf
ITEMS[21]=aspects/fonts/files/MonoLisa-ExtraLightItalic.ttf
ITEMS[22]=aspects/fonts/files/MonoLisa-Light.ttf
ITEMS[23]=aspects/fonts/files/MonoLisa-LightItalic.ttf
ITEMS[24]=aspects/fonts/files/MonoLisa-Medium.ttf
ITEMS[25]=aspects/fonts/files/MonoLisa-MediumItalic.ttf
ITEMS[26]=aspects/fonts/files/MonoLisa-Regular.ttf
ITEMS[27]=aspects/fonts/files/MonoLisa-RegularItalic.ttf
ITEMS[28]=aspects/fonts/files/MonoLisa-SemiBold.ttf
ITEMS[29]=aspects/fonts/files/MonoLisa-SemiBoldItalic.ttf
ITEMS[30]=aspects/fonts/files/MonoLisa-Thin.ttf
ITEMS[31]=aspects/fonts/files/MonoLisa-ThinItalic.ttf
ITEMS[32]=aspects/ssh/templates/.ssh/config.erb
ITEMS[33]=aspects/ssh/files/.ssh/config.d/pre/comp-ktw7q4c5jh

decrypt() {
  local PLAINTEXT=$1
  local CIPHERTEXT="${PLAINTEXT}.encrypted"

  if [ ! -f "$IDENTITY" ]; then
    echo "ðŸ’¥ ${BOLD}${RED}Cannot decrypt without identity:${RESET} ${IDENTITY}"
    exit 1
  fi

  if [ -f "$CIPHERTEXT" ]; then
    echo "ðŸ”“ ${BOLD}${GREEN}Decrypting:${RESET} ${PLAINTEXT}"
    age --decrypt -i "$IDENTITY" -o "$PLAINTEXT" "$CIPHERTEXT"
    if [[ "$PLAINTEXT" == *.sh ]]; then
      chmod +x "$PLAINTEXT"
    fi
  else
    echo "ðŸ’¥ ${BOLD}${RED}Not decrypting (non-file):${RESET} ${CIPHERTEXT}"
  fi
}

encrypt() {
  local PLAINTEXT=$1
  local CIPHERTEXT="${PLAINTEXT}.encrypted"

  if [ -f "$PLAINTEXT" ]; then
    if [ -f "$CIPHERTEXT" -a -f "$IDENTITY" ]; then
      local DECRYPTED=$(age --decrypt -i "$IDENTITY" "$CIPHERTEXT")
      if [[ "$DECRYPTED" == "$(cat "$PLAINTEXT")" ]]; then
        echo "â© ${BOLD}Skipping (already up-to-date):${RESET} ${PLAINTEXT}"
        return
      fi
    fi
    echo "ðŸ”‘ ${BOLD}${GREEN}Encrypting:${RESET} ${PLAINTEXT}"
    age --encrypt -r $RECIPIENT --armor -o "${CIPHERTEXT}"  "$PLAINTEXT"
  else
    echo "ðŸ’¥ ${BOLD}${RED}Not encrypting (non-file):${RESET} ${PLAINTEXT}"
  fi
}

ignore() {
  local PLAINTEXT=$1

  if ! grep -qxF "/$PLAINTEXT" .gitignore 2> /dev/null; then
    echo "âœ… ${BOLD}${GREEN}Ignoring:${RESET} ${PLAINTEXT}"
    echo "/$PLAINTEXT" >> .gitignore
  else
    echo "ðŸ™ˆ ${BOLD}Already ignored:${RESET} ${PLAINTEXT}"
  fi
}

status() {
  local PLAINTEXT=$1

  if [ ! -f "$PLAINTEXT" ]; then
    echo "$PLAINTEXT"
  fi
}

REPO_ROOT="${BASH_SOURCE%/*}/.."
cd "$REPO_ROOT"

# If specific files are provided as arguments, filter ITEMS to only those files
if [ $# -gt 0 ]; then
  FILTERED_ITEMS=()
  for ARG in "$@"; do
    # Make path relative to repo root if it's absolute
    if [[ "$ARG" == "$REPO_ROOT"/* ]]; then
      ARG="${ARG#$REPO_ROOT/}"
    fi
    # Check if this argument matches any item in ITEMS
    for ITEM in "${ITEMS[@]}"; do
      if [[ "$ITEM" == "$ARG" ]]; then
        FILTERED_ITEMS+=("$ITEM")
        break
      fi
    done
  done
  ITEMS=("${FILTERED_ITEMS[@]}")
fi

for ITEM in "${ITEMS[@]}"; do
  if [[ "$OPERATION" == "encrypt" ]]; then
    encrypt "$ITEM"
    ignore "$ITEM"
  elif [[ "$OPERATION" == "decrypt" ]]; then
    decrypt "$ITEM"
  elif [[ "$OPERATION" == "status" ]]; then
    status "$ITEM"
  else
    echo "ðŸ’¥ ${BOLD}${RED}Unsupported operation:${RESET} $OPERATION"
    exit 1
  fi
done
