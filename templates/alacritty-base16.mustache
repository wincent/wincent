# Default colors
[colors.primary]
background = '0x{{base00-hex}}'
foreground = '0x{{base05-hex}}'

# Colors the cursor will use if `custom_cursor_colors` is true
[colors.cursor]
text = '0x{{base00-hex}}'
cursor = '0x{{base05-hex}}'

# Normal colors
[colors.normal]
black = '0x{{base01-hex}}'
red = '0x{{base08-hex}}'
green = '0x{{base0B-hex}}'
yellow = '0x{{base0A-hex}}'
blue = '0x{{base0D-hex}}'
magenta = '0x{{base0E-hex}}'
cyan = '0x{{base0C-hex}}'
white = '0x{{base06-hex}}'

# Bright colors
[colors.bright]
black = '0x{{base02-hex}}'
