{
  "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
  "diagnostics": {
    "globals": [
      "vim"
    ]
  },
  "runtime": {
    "path": [
      "lua/?.lua",
      "lua/?/init.lua"
    ],
    "version": "LuaJIT"
  },
  "workspace": {
    "ignoreDir": [
      "**/.config/nvim/undo/"
    ],
    "library": [
      "$VIMRUNTIME"
    ]
  }
}
