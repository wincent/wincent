{
  "compilerOptions": {
    "erasableSyntaxOnly": true,
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./lib",
    "baseUrl": ".",
    "paths": {
      "fig": ["fig/index.js"],
      "fig/*": ["fig/*"]
    },
    "strict": true,
    "target": "ES2024",
    "verbatimModuleSyntax": true
  },
  "exclude": [
    "aspects/interception/support/mac2linux/CMakeFiles/**",
    "node_modules"
  ],
  "include": [
    "aspects/**/*.mts",
    "aspects/**/*.ts",
    "fig.config.ts",
    "fig/**/*.mts",
    "fig/**/*.ts",
    "helpers.ts",
    "variables.ts"
  ]
}
