{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "erasableSyntaxOnly": true,
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": ".",
    "paths": {
      "fig": ["./fig/index.js"],
      "fig/*": ["./fig/*"],
      "*": ["./*"]
    },
    "strict": true,
    "target": "esnext",
    "verbatimModuleSyntax": true
  },
  "exclude": [
    "aspects/interception/support/mac2linux/CMakeFiles/**",
    "node_modules"
  ],
  "include": [
    "aspects/**/*.mts",
    "aspects/**/*.ts",
    "fig.config.ts",
    "fig/**/*.mts",
    "fig/**/*.ts",
    "helpers.ts",
    "support/**/*.ts",
    "variables.ts"
  ]
}
