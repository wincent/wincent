{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "claude-pre-tool-use-hook"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "claude-post-tool-use-hook"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-stop-hook"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(command git diff:*)",
      "Bash(command git log:*)",
      "Bash(command git show:*)",
      "Bash(command git status:*)",
      "Bash(command rg:*)",
      "Bash(find:*)",
      "Bash(rg:*)"
    ],
    "deny": [
      "Bash(find:*-exec*)"
    ]
  }
}
