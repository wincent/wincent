{
  "cleanupPeriodDays": 99999,
  "permissions": {
    "allow": [
      "Bash(command git diff:*)",
      "Bash(command git log:*)",
      "Bash(command git show:*)",
      "Bash(command git status:*)"
    ],
    "deny": []
  },
  "model": "opus",
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-notify-hook"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "claude-pre-tool-use-hook"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "claude-post-tool-use-hook"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-stop-hook"
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": true,
  "statusLine": {
    "type": "command",
    "command": "~/.zsh/bin/claude-statusline",
    "padding": 0
  }
}
